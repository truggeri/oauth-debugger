{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/oauth/authorize",
        "function": "authorize"
      },
      {
        "source": "/client",
        "function": "create_client"
      },
      {
        "source": "/oauth/grant",
        "function": "code_grant"
      },
      {
        "source": "/oauth/token",
        "function": "token"
      }
    ]
  }
}
